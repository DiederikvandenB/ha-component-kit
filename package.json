{
  "name": "ha-component-kit",
  "version": "1.0.0",
  "type": "module",
  "keywords": [
    "react",
    "homeassistant",
    "home-assistant",
    "home-automation",
    "component",
    "library",
    "api"
  ],
  "description": "A collection of React components for Home Assistant to easily communicate with the Home Assistant WebSocket API.",
  "main": "dist/ha-component-kit.umd.js",
  "module": "dist/ha-component-kit.es.js",
  "types": "dist/types/index.d.ts",
  "author": "Shannon Hochkins",
  "license": "ISC",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shannonhochkins/ha-component-kit"
  },
  "bugs": {
    "url": "https://github.com/shannonhochkins/ha-component-kit/issues"
  },
  "homepage": "https://shannonhochkins.github.io/ha-component-kit",
  "scripts": {
    "start": "npm run storybook",
    "dev": "vite",
    "prebuild": "rm -rf ./dist && npm run prettier",
    "build": "tsc && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prettier": "prettier \"src/**/*.{ts,tsx}\" --write && git status",
    "storybook": "storybook dev -p 6006",
    "build:types": "tsc --project tsconfig.build.json",
    "build:storybook": "storybook build",
    "build:ha-types": "npx tsx ./scripts/ha-types.ts && npx prettier --write './src/types/supported-services.d.ts'"
  },
  "dependencies": {
    "use-debounce": "^9.0.4",
    "zustand": "^4.3.8"
  },
  "peerDependencies": {
    "react": ">=16.x",
    "react-dom": ">=16.x"
  },
  "devDependencies": {
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.13.6",
    "@storybook/addon-essentials": "^7.0.23",
    "@storybook/addon-interactions": "^7.0.23",
    "@storybook/addon-links": "^7.0.23",
    "@storybook/blocks": "^7.0.23",
    "@storybook/builder-vite": "^7.0.23",
    "@storybook/react": "^7.0.23",
    "@storybook/react-vite": "^7.0.23",
    "@storybook/testing-library": "^0.0.14-next.2",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.3.1",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "eslint-plugin-storybook": "^0.6.12",
    "home-assistant-js-websocket": "^8.0.1",
    "prettier": "^2.8.8",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.0.23",
    "ts-node": "^10.9.1",
    "type-fest": "^3.12.0",
    "typescript": "^5.0.2",
    "vite": "^4.3.9",
    "vite-plugin-dts": "^2.3.0",
    "vite-plugin-linter": "^2.0.2",
    "vite-tsconfig-paths": "^4.2.0"
  }
}
